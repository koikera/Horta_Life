
@{
    ViewBag.Title = "reserva";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<header>
    <div class="header">
        <img class="logo" src="/images/Modelo1.png" alt="">
        <h1 class="Titulo">Horta Life</h1>
    </div>
    <div class="user">
        <img class="userImg" src="/images/user.png" alt="">
        <p class="nome">Matheus</p>
    </div>
</header>
<section>
    <form method="post" action="Reservar">
        <div class="dataReserva">
            <div class="ida">
                <p class="TextDatas"><strong>Check-In</strong></p>
                <input type="date" value="" class="datas" name="Checkin"id="Checkin" >
            </div>
            <div class="volta">
                <p class="TextDatas"><strong>Check-Out</strong></p>
                <input type="date" value="" class="datas" name="Checkout" id="Checkout">
            </div>
            <div class="hospedes">
                <p class="TextDatas"><strong>Hóspedes</strong></p>
                <div class="SliderHospedes">
                    <input class="slider" name="Hospedes" type="range" min="1" max="6" value="1" id="myRange">
                    <p style="margin: 0;"><span id="demo"></span></p>
                </div>
            </div>
            <button type="submit" value="Reservar" class="reservar"><strong>Reservar</strong></button>
        </div>
    </form>
</section>
<section>
    <div class="containerReserva">
        <img class="hotel" src="~/images/Modelo2.png" />
        <div class="lista">
            <div class="confirmDT">
                <p><strong>Check-In:</strong></p>
                <p><span id="valueCheckin"></span></p>
            </div>
            <div class="confirmDT">
                <p><strong>Check-Out:</strong></p>
                <p><span id="valueCheckout"></span></p>
            </div>
            <div class="confirmDT">
                <p><strong>Hóspedes:</strong></p>
                <p><span id="Hospedes"></span></p>
            </div>
        </div>
    </div>
</section>
