    <!-- Copyrights -->
    <div class="bg-light py-4">
        <div class="container text-center">
            <p class="text-muted mb-0 py-2">© Horta Life 2021</p>
        </div>
    </div>
</footer>
<script>
    var slider = document.getElementById("myRange");
    var output = document.getElementById("demo");
    output.innerHTML = slider.value; // Display the default slider value

    var checkin = document.getElementById("Checkin");
    console.log(checkin)
    var valueCheckin = document.getElementById("valueCheckin");
    valueCheckin.innerHTML = checkin.value;

    var checkout = document.getElementById("Checkout");
    console.log(checkout)
    var valuecheckout = document.getElementById("valueCheckout");
    valuecheckout.innerHTML = checkout.value;

    var hospedes = document.getElementById("Hospedes");
    hospedes.innerHTML = slider.value
    
    

    checkout.oninput = function () {
        valuecheckout.innerHTML = this.value
    }
    checkin.oninput = function () {
        valueCheckin.innerHTML = this.value
    }
    // Update the current slider value (each time you drag the slider handle)
    slider.oninput = function() {
        output.innerHTML = this.value;
        hospedes.innerHTML = this.value;
    }
</script>

